@model era_Computacion.Models.db.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>
<html dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/ico" sizes="16x16" href="~/Template/assets/images/era-favi.ico">
    <title>eraComputacion   |   Registro</title>
    <!-- Custom CSS -->
    <link href="~/Template/dist/css/style.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/8.11.8/sweetalert2.min.css">
    <link href="~/plugins/pnotify/dist/pnotify.custom.min.css" rel="stylesheet" />
    <link href="~/plugins/pnotify/dist/pnotify.buttons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/css/select2.min.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background: #eee;">
            <div class="col-9  d-flex align-items-center border-top border-secondary">
                <div>
                    <div class="text-center p-t-20 p-b-20">
                        <span class="db"><img src="~/Template/assets/images/eracomputacion.png" width="188px" height="34px" alt="logo" /></span>
                    </div>
                    <form asp-action="Registro" class="form-horizontal m-t-20">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row p-b-30">
                            <div class="col-md-6 ">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                                    </div>
                                    <!--label asp-for="Nombre" class="control-label"></label-->
                                    <input type="text" asp-for="Nombre" placeholder="Nombre" class="form-control form-control-lg" aria-label="Name" aria-describedby="basic-addon1" required />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                                    </div>
                                    <!--label asp-for="Apellidos" class="control-label"></label-->
                                    <input asp-for="Apellidos" type="text" placeholder="Apellidos" class="form-control form-control-lg" aria-label="Lastname" aria-describedby="basic-addon1" required />
                                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-info text-white" id="basic-addon1"><i class="ti-email"></i></span>
                                    </div>
                                    <input asp-for="Correo" type="email" placeholder="Correo Electrónico" class="form-control form-control-lg" aria-label="Email" aria-describedby="basic-addon1" required />
                                    <span asp-validation-for="Correo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                                    </div>
                                    <!--label asp-for="NombreUsuario" class="control-label"></!--label-->
                                    <input asp-for="NombreUsuario" type="text" placeholder="Nombre de Usuario" class="form-control form-control-lg" aria-label="Username" aria-describedby="basic-addon1" required />
                                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                                    </div>
                                    <!--label asp-for="Direccion" class="control-label"></!--label-->
                                    <input asp-for="Direccion" type="text" placeholder="Dirección" class="form-control form-control-lg" aria-label="Address" aria-describedby="basic-addon1" required />
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-warning text-white" id="basic-addon2"><i class="ti-key"></i></span>
                                    </div>
                                    <!--label asp-for="Contrasena" class="control-label"></!--label-->
                                    <input asp-for="Contrasena" type="password" placeholder="Cotraseña" class="form-control form-control-lg" aria-label="Password" aria-describedby="basic-addon1" required />
                                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-info text-white" id="basic-addon1"><i class="ti-agenda"></i></span>
                                    </div>
                                    <!--label asp-for="Telefono" class="control-label"></!--label-->
                                    <input asp-for="Telefono" type="text" placeholder="Telefono" class="form-control form-control-lg" aria-label="Phone" aria-describedby="basic-addon1" required />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-info text-white" id="basic-addon1"><i class="ti-mobile"></i></span>
                                    </div>
                                    <!--label asp-for="Celular" class="control-label"></!--label-->
                                    <input asp-for="Celular" type="text" placeholder="Celular" class="form-control form-control-lg" aria-label="Cellphone" aria-describedby="basic-addon1" required />
                                    <span asp-validation-for="Celular" class="text-danger"></span>
                                </div>
                            </div>
                            <!--div class="form-group">
                                <label asp-for="ImgUsuario" class="control-label"></label>
                                <input asp-for="ImgUsuario" class="form-control" />
                                <span asp-validation-for="ImgUsuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RTipo" class="control-label"></label>
                                <select asp-for="RTipo" class="form-control" asp-items="ViewBag.RTipo"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="RStatus" class="control-label"></label>
                                <select asp-for="RStatus" class="form-control" asp-items="ViewBag.RStatus"></select>
                            </div-->

                        </div>
                        <div class="row border-top border-secondary">
                            <div class="col-lg-12 text-center">
                                <div class="form-group">
                                    <div class="p-t-20">
                                        <input type="submit" value="Registrarte" class="btn btn-block btn-lg btn-info" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- All Required js -->
    <!-- ============================================================== -->

    <script src="~/Template/assets/libs/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/Template/assets/libs/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/Template/assets/libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Pnotify -->
    <script src="~/plugins/pnotify/dist/pnotify.js"></script>
    <script src="~/plugins/pnotify/dist/pnotify.buttons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js"></script>
    <!-- ============================================================== -->
    <!-- This page plugin js -->
    <!-- ============================================================== -->
    <script>
        $('[data-toggle="tooltip"]').tooltip();
        $(".preloader").fadeOut();
    </script>

    @{
        string controlmsj = "";
        if (TempData["mensaje"] != null)
        {
            controlmsj = TempData["mensaje"].ToString();
        }
    }


    @if (controlmsj == "usuarioExistente")
    {

        <script>
            $(document).ready(function () {
                new PNotify({
                    title: 'Error',
                    text: 'Este usuario ya existe',
                    type: 'error'
                });
            });
        </script>

        TempData.Remove("mensaje");
    }
</body>
</html>
