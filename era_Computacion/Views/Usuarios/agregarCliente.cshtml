@model era_Computacion.Models.customUsuarioAdd
@{
    ViewData["Title"] = "Agregar usuario";
}
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-5">
                <h4 class="page-title">@ViewData["Title"]</h4>

            </div>

        </div>
    </div>
<hr />
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <!-- Row -->
    <div class="row">

        <!-- Column -->
        <div class="col-lg-12 col-xlg-12 col-md-12">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal form-material" asp-action="agregarCliente" enctype="multipart/form-data">
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group col-md-6">
                                <label asp-for="usuario.Nombre" class="control-label"></label>
                                <input asp-for="usuario.Nombre" required class="form-control" />
                                <span asp-validation-for="usuario.Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="usuario.Apellidos" class="control-label"></label>
                                <input asp-for="usuario.Apellidos" required class="form-control" />
                                <span asp-validation-for="usuario.Apellidos" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="usuario.Direccion" class="control-label">Dirección</label>
                                <input asp-for="usuario.Direccion" required class="form-control" />
                                <span asp-validation-for="usuario.Direccion" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="usuario.Correo" class="control-label"></label>
                                <input asp-for="usuario.Correo" type="email" required class="form-control" />
                                <span asp-validation-for="usuario.Correo" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="usuario.NombreUsuario" class="control-label">Nombre de usuario</label>
                                <input asp-for="usuario.NombreUsuario" required class="form-control" />
                                <span asp-validation-for="usuario.NombreUsuario" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="usuario.Contrasena" class="control-label">Contraseña</label>
                                <input asp-for="usuario.Contrasena" type="password" required class="form-control" />
                                <span asp-validation-for="usuario.Contrasena" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="usuario.Telefono" class="control-label">Teléfono</label>
                                <input asp-for="usuario.Telefono" required class="form-control" />
                                <span asp-validation-for="usuario.Telefono" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="usuario.Celular" class="control-label"></label>
                                <input asp-for="usuario.Celular" required class="form-control" />
                                <span asp-validation-for="usuario.Celular" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="control-label">Imagen de perfil</label><br />
                                <span class="btn btn-success fileinput-button">
                                    <span>Selecciona una imagen</span>
                                    <input accept="image/jpeg, image/png, image/gif,"
                                           id="files" name="files" type="file" />
                                </span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="usuario.RTipo" class="control-label">Tipo de usuario</label>
                                <select asp-for="usuario.RTipo" required class="form-control" asp-items="ViewBag.tipos"></select>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button class="btn btn-success">Crear</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Column -->
    </div>
    <!-- Row -->
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Right sidebar -->
    <!-- ============================================================== -->
    <!-- .right-sidebar -->
    <!-- ============================================================== -->
    <!-- End Right sidebar -->
    <!-- ============================================================== -->
</div>


